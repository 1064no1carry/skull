
# dependency targets
flibs:
	$(MAKE) $(MAKE_FLAGS) -C ./deps/flibs || exit "$$?"

protos:
	cd src && $(MAKE) $@

metrics:
	cd scripts/config && ../tools/sk-metrics-gen.py -c metrics.yaml
	mv scripts/config/sk_metrics.h src/api
	mv scripts/config/sk_metrics.c src/common

api-cpp:
	cd src/user-cpp && $(MAKE) $(MAKE_FLAGS)

.PHONY: flibs protos metrics api-cpp

# install targets
install-core:
	cd src && $(MAKE) install

install-api:
	cd src/user-c && $(MAKE) install

install-api-cpp:
	cd src/user-cpp && $(MAKE) install

install-others:
	test -d $(prefix)/etc/skull || mkdir -p $(prefix)/etc/skull
	cp ChangeLog.md $(prefix)/etc/skull

install-scripts:
	cd scripts && $(MAKE) install

.PHONY: install-core install-api intall-api-cpp install-others install-scripts

# clean targets

clean-flibs:
	$(MAKE) $(MAKE_FLAGS) -C ./deps/flibs clean || exit "$$?"

clean-protos:
	cd src && $(MAKE) $@

clean-api-cpp:
	cd src/user-cpp && $(MAKE) clean

.PHONY: clean-flibs clean-protos clean-api-cpp
